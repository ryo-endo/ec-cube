{% set version_check = item.version_check  %}
<div class="plugin-panel {% if version_check == 0 %}plugin-panel-not{% endif %} {% if item.promotion == 1 %}plugin-panel-pr{% endif %}">
    <div class="plugin-logo">
        <a href="{{ item.product_url }}" target="_blank"><img class="img-rounded" src="{{ item.product_image_url }}"></a>
    </div>
    <div class="plugin-content-top">
        <div class="plugin-title">
            <span class="pull-right">
                <a class="btn btn-xs searchPluginModal" href="#" data-id="{{ item.product_id }}">詳細表示</a>
                {% if item.update_status == 2 or item.update_status == 3 %}
                    <h4 id="plugin-id-{{ item.product_id }}" class="display-in-bl"><span class="label label-success">インストール済み</span></h4>
                {% elseif item.update_status == 4 %}
                    <a id="plugin-id-{{ item.product_id }}" class="btn btn-success btn-xs" href="{{ item.product_url }}" target="_blank">購入</a>
                {% else %}
                    <a id="plugin-id-{{ item.product_id }}" class="btn btn-warning btn-xs" href="{{ url('admin_store_plugin_install_confirm', {'id': item.product_id}) }}">インストール</a>
                {% endif %}
            </span>
            <a class="plugin-name" href="{{ item.product_url }}" target="_blank">{{ item.name }}</a>
        </div>
        <div class="plugin-description">
            {{ item.summary }}
        </div>
        {% if item.depend is not empty %}
            {% for depend in item.depend %}
                <p class="text-danger">{{ depend.name }}が必要です。同時にインストールされます。</p>
            {% endfor %}
        {% endif %}
    </div>
    <div class="clearfix"></div>
    <div class="plugin-content-bottom">
        <dl class="plugin-meta dl-horizontal">
            <dt class="plugin-price">価格</dt><dd>{% if 0 < item.price  %}{{ item.price|price }}{% else %}無料{% endif %}</dd>
            <dt class="plugin-dowload">ダウンロード数</dt><dd>{{ item.download_number }}</dd>
            <dt class="plugin-developer">制作者</dt><dd>{% if item.developer_url is not null %}<a href="{{ item.developer_url }}" target="_blank">{{ item.developer }}</a>{% else %}{{ item.developer }}{% endif %}</dd>
        </dl>
        {% if version_check == 0 %}
            <p class="text-danger">このプラグインはEC-CUBE {{ constant('Eccube\\Common\\Constant::VERSION') }}をサポートしていないため、正常に動作しない可能性があります。</p>
        {% endif %}
    </div>
</div>